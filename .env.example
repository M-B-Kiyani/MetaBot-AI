# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Widget Configuration
WIDGET_ALLOWED_DOMAINS=localhost,127.0.0.1,yourdomain.com
WIDGET_API_KEYS=your_widget_api_key_1,your_widget_api_key_2
WIDGET_RATE_LIMIT_AUTHENTICATED=200
WIDGET_RATE_LIMIT_PUBLIC=50

# Security Configuration
API_KEYS=your_api_key_1,your_api_key_2
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com,https://*.yourdomain.com
TRUSTED_IPS=127.0.0.1,::1
BLOCKED_IPS=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# API Keys (Required for production)
GEMINI_API_KEY=your_gemini_api_key_here
HUBSPOT_API_KEY=your_hubspot_api_key_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account_email_here
GOOGLE_PRIVATE_KEY=your_google_private_key_here
RETELL_API_KEY=your_retell_api_key_here
RETELL_WEBHOOK_SECRET=your_retell_webhook_secret_here

# Calendar Configuration
GOOGLE_CALENDAR_ID=your_calendar_id_here
TIMEZONE=America/New_York

# Company Information
COMPANY_NAME=Metalogics.io
COMPANY_DOMAIN=metalogics.io

# Database Configuration (if needed for future expansion)
# DATABASE_URL=your_database_url_here

# Monitoring and Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
EXTERNAL_API_TIMEOUT=10000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
